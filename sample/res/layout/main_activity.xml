<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dddddd"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif-light"
                android:text="Enter purchase details"
                android:textColor="#222222"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" >

                <EditText
                    android:id="@+id/track_release_id_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="6"
                    android:fontFamily="sans-serif-light"
                    android:hint="Album ID"
                    android:textColor="#222222" />

                <EditText
                    android:id="@+id/track_id_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="6"
                    android:fontFamily="sans-serif-light"
                    android:hint="Track ID"
                    android:textColor="#222222" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/affiliate_id_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:hint="Partner ID"
                    android:inputType="number"
                    android:textColor="#222222" />

                <EditText
                    android:id="@+id/country_code_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:hint="Country code"
                    android:inputType="textCapCharacters"
                    android:textColor="#222222" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/buy_track_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:fontFamily="sans-serif-light"
                    android:text="Buy track"
                    android:textColor="#222222" >

                    <requestFocus/>
                </Button>

                <Button
                    android:id="@+id/buy_release_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:fontFamily="sans-serif-light"
                    android:text="Buy album"
                    android:textColor="#222222" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/buy_album_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Buy Album"
            android:textColor="#222222" />

        <Button
            android:id="@+id/buy_track_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Buy Track"
            android:textColor="#222222" />

        <Button
            android:id="@+id/buy_specific_track_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Buy Specific Track"
            android:textColor="#222222" />

        <Button
            android:id="@+id/buy_us_track_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Buy US Track"
            android:textColor="#222222" />

        <Button
            android:id="@+id/buy_track_partner712_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Buy Track Partner712"
            android:textColor="#222222" />

        <Button
            android:id="@+id/free_track_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Free Track"
            android:textColor="#222222" />
    </LinearLayout>

</ScrollView>